# =============================================================================
# GIAS Backend - Production Environment Variables Template
# =============================================================================
# Copy this file to .env in your deployment environment and fill in actual values.
# DO NOT commit secrets to version control.

# Database
# Use postgresql+asyncpg:// for Render/cloud deployments
DATABASE_URL=postgresql://username:password@host:5432/dbname
ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@host:5432/dbname

# Application
SECRET_KEY=your-secure-random-secret-key-min-32-chars
DEBUG=false
API_TITLE=GIAS Institutional Website & Trust Portal
API_VERSION=1.0.0

# CORS - comma-separated list of allowed origins
ALLOWED_ORIGINS=https://portal.gias.institute,https://gias.institute,http://localhost:3000

# S3 / Object Storage (MinIO or AWS S3)
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key
S3_BUCKET=gias-evidence

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
